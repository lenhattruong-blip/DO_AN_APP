<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ChonGheFragment">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/tvHeaderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chọn chỗ ngồi"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Nút Xác nhận -->
    <Button
        android:id="@+id/btnConfirmSeat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Xác nhận"
        android:padding="16dp"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!--
    Container cho toàn bộ lưới ghế
    Dùng LinearLayout (dọc) để chứa các hàng ghế
    -->
    <LinearLayout
        android:id="@+id/seatGridContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvHeaderTitle"
        app:layout_constraintBottom_toTopOf="@id/btnConfirmSeat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.0"> <!-- Căn lên trên -->

        <!-- Hàng 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/seat1A"
                style="@style/SeatStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1A" />

            <TextView
                android:id="@+id/seat1B"
                style="@style/SeatStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1B" />

            <!-- Lối đi ở giữa -->
            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5" />

            <TextView
                android:id="@+id/seat1C"
                style="@style/SeatStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1C" />

            <TextView
                android:id="@+id/seat1D"
                style="@style/SeatStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1D" />
        </LinearLayout>

        <!-- Hàng 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"> <!-- Khoảng cách giữa các hàng -->

            <TextView
                android:id="@+id/seat2A"
                style="@style/SeatStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2A" />

            <TextView
                android:id="@+id/seat2B"
                style="@style/SeatStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2B"
                android:background="@drawable/ghexanh_dachon"
                android:textColor="@android:color/white" />

            <!-- Lối đi ở giữa -->
            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5" />

            <TextView
                android:id="@+id/seat2C"
                style="@style/SeatStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2C"
                android:background="@drawable/ghexamdam_khongthechon" />

            <TextView
                android:id="@+id/seat2D"
                style="@style/SeatStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2D"
                android:background="@drawable/ghexamdam_khongthechon" />
        </LinearLayout>

        <!-- Hàng 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/seat3A"
                style="@style/SeatStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3A" />

            <TextView
                android:id="@+id/seat3B"
                style="@style/SeatStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3B" />

            <!-- Lối đi ở giữa -->
            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5" />

            <TextView
                android:id="@+id/seat3C"
                style="@style/SeatStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3C" />

            <TextView
                android:id="@+id/seat3D"
                style="@style/SeatStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3D" />
        </LinearLayout>

        <!-- Hàng 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/seat4A"
                style="@style/SeatStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="4A" />

            <TextView
                android:id="@+id/seat4B"
                style="@style/SeatStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="4B"
                android:background="@drawable/ghexanh_dachon"
                android:textColor="@android:color/white" />

            <!-- Lối đi ở giữa -->
            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5" />

            <TextView
                android:id="@+id/seat4C"
                style="@style/SeatStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="4C"
                android:background="@drawable/ghexamdam_khongthechon" />

            <TextView
                android:id="@+id/seat4D"
                style="@style/SeatStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="4D"
                android:background="@drawable/ghexamdam_khongthechon" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>